{
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"noAccessKey": "error",
				"noAriaHiddenOnFocusable": "error",
				"useAltText": "warn"
			},
			"complexity": {
				"useFlatMap": "warn",
				"noEmptyTypeParameters": "error"
			},
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"requireAscii": true,
						"filenameCases": ["kebab-case", "PascalCase"]
					}
				}
			}
		}
	},
	"formatter": {
		"indentWidth": 2,
		"lineWidth": 100
	}
}
